generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model ChatSession {
  id        String    @id @default(cuid())
  title     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[]
}

model Message {
  id        String      @id @default(cuid())
  text      String
  sender    String // "user" or "assistant"
  createdAt DateTime    @default(now())
  session   ChatSession @relation(fields: [sessionId], references: [id])
  sessionId String
}
